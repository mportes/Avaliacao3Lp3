@{
    ViewData["Title"] = "Cadastro Comércio";
}

<h1>Cadastre um comércio</h1>
<hr>
<form action="ConfirmacaoCadastro" method="post">
    <p>
        <label for="piso"><b>Piso:</b></label>
        <select name="piso" id="piso">
            <option value="Piso 1">1</option>
            <option value="Piso 2">2</option>
            <option value="Piso 3">3</option>
        </select>
    </p>
    <p>
        <label for="tipo"><b>Tipo:</b></label>
        <select name="tipo" id="tipo">
            <option value="Loja">Loja</option>
            <option value="Quiosque">Quiosque</option>
        </select>
    </p>
    <hr>
    <p>
        <label for="nome"><b>Nome</b></label><br>
        <input type="text" id="nome" name="nome">
    </p>
    <p>
        <label for="descricao"><b>Descrição</b></label><br>
        <input type="text" id="descricao" name="descricao">
    </p>
    <p>
        <label for="email"><b>Email</b></label><br>
        <input type="email" id="email" name="email">
    </p>
    <hr>
    
    <input type="submit" value="Cadastrar">
</form>